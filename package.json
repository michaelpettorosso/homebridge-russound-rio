{
  "name": "homebridge-russound-rio",
  "version": "0.2.8",
  "description": "Russound RIO plugin for homebridge: https://github.com/nfarina/homebridge",
  "main": "index.js",
  "license": "ISC",
  "scripts": {
    "pretest": "eslint --ignore-path .gitignore package.json config.schema.json",
    "test": "xo"
  },
  "keywords": [
    "Russound",
    "RIO",
    "HomeBridge",
    "homebridge-plugin"
  ],
  "engines": {
    "homebridge": "^1.6.0 || ^2.0.0-beta.0",
    "node": "^18.20.4 || ^20.15.1 || ^22.7.0"
  },
  "author": "Michael Pettorosso",
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michaelpettorosso/homebridge-russound-rio.git"
  },
  "devDependencies": {
    "eslint": "^9.12.0",
    "eslint-plugin-json": "^4.0.1",
    "xo": "^0.59.3"
  },
  "dependencies": {
    "russound-rio": "^0.1.0"
  },
  "homepage": "https://github.com/michaelpettorosso/homebridge-russound-rio#readme",
  "xo": {
    "space": false,
    "rules": {
      "camelcase": "off",
      "kebabCase": "off",
      "no-mixed-spaces-and-tabs": "warn",
      "no-useless-escape": "warn",
      "indent": "off",
      "quotes": "warn",
      "capitalized-comments": "off",
      "no-var": "warn",
      "prefer-destructuring": "off",
      "prefer-arrow-callback": "warn",
      "object-shorthand": [
        "off",
        "always",
        {
          "ignoreConstructors": true
        }
      ],
      "quote-props": "error",
      "no-unused-vars": "warn",
      "curly": [
        "error",
        "multi-or-nest",
        "consistent"
      ],
      "no-use-before-define": [
        "error",
        {
          "classes": false
        }
      ]
    }
  },
  "bugs": {
    "url": "https://github.com/michaelpettorosso/homebridge-russound-rio/issues"
  }
}
